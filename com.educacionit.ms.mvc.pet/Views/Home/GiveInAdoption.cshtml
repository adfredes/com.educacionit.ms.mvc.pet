@model COM.Educacionit.MS.MVC.Pet.Models.PetModel

@{
    ViewBag.Title = "Registers a Pet";    
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<section class="content jumbotron">

    @using (Html.BeginForm("GiveInAdoption", "Home", FormMethod.Post))
    {

        <div class="form-group">
            @Html.LabelFor(m => m.Name , "Name")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Pet´s Name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Age, "Age")
            @Html.TextBoxFor(m => m.Age, new { @type = "number", @class = "form-control", placeholder = "Pet´s Age" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, "Description")
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Pet´s Descripion" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Owner.Name, "Contact Full Name")
            @Html.TextBoxFor(m => m.Owner.Name, new { @class = "form-control", placeholder = "Contact Name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Owner.Email, "Contact Email")
            @Html.TextBoxFor(m => m.Owner.Email, new { @type = "email", @class = "form-control", placeholder = "Contact Email" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Owner.Phone, "Contact Phone")
            @Html.TextBoxFor(m => m.Owner.Phone, new { @class = "form-control", placeholder = "Contact Email" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Owner.Address.Street, "Contact Address")
            @Html.TextAreaFor(m => m.Owner.Address.Street, new { @class = "form-control", placeholder = "Contact Address" })
        </div>

        <input type="submit" class="btn btn-primary" value="Enter" />@:&nbsp;&nbsp;<input type="reset" class="btn btn-info" value="Clean" />
    }

</section>